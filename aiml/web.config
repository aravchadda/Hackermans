<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <!-- HttpPlatformHandler for Python/Flask -->
    <handlers>
      <add name="httpPlatformHandler" path="*" verb="*" modules="httpPlatformHandler" resourceType="Unspecified" requireAccess="Script" />
    </handlers>
    
    <!-- HttpPlatform configuration -->
    <!-- Note: processPath and arguments will be replaced by setup script with actual paths -->
    <httpPlatform 
      processPath="C:\Users\DevAdmin03\AppData\Local\Microsoft\WindowsApps\python.exe"
      arguments="startup.py"
      stdoutLogEnabled="true"
      stdoutLogFile=".\logs\stdout.log"
      startupTimeLimit="20"
      startupRetryCount="10"
      requestTimeout="00:04:00">
      <environmentVariables>
        <environmentVariable name="HTTP_PLATFORM_PORT" value="%HTTP_PLATFORM_PORT%" />
        <environmentVariable name="PYTHONUNBUFFERED" value="1" />
        <environmentVariable name="OLLAMA_URL" value="http://localhost:11434" />
        <environmentVariable name="MODEL_NAME" value="gemma3:12b" />
      </environmentVariables>
    </httpPlatform>
    
    <!-- URL Rewrite for Flask (if needed) -->
    <rewrite>
      <rules>
        <!-- Ensure trailing slash for directories -->
        <rule name="AddTrailingSlash" stopProcessing="true">
          <match url="(.*[^/])$" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" />
          </conditions>
          <action type="Redirect" url="{R:1}/" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- Security -->
    <security>
      <requestFiltering>
        <hiddenSegments>
          <remove segment="bin" />
        </hiddenSegments>
      </requestFiltering>
    </security>
    
    <!-- Compression -->
    <urlCompression doStaticCompression="true" doDynamicCompression="true" />
    
    <!-- Security headers -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="SAMEORIGIN" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>
</configuration>

